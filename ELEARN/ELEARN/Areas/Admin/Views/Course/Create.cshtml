@using ELEARN.Areas.Admin.ViewModels;
@model CourseCreateVM
@{
    ViewData["Title"] = "Create Course";
}



<div style="padding-left:200px" class="container my-5">
    <a asp-action="Index" style="border:1px solid red;margin-bottom:20px;margin-top:20px;margin-left:700px;text-decoration-color:white;" class="btn btn-outline-danger">Go to Course</a> <a asp-action="Create" style="border:1px solid green;margin-bottom:20px;;margin-top:20px;margin-left:10px;text-decoration-color:white;" class="btn btn-outline-success">Create</a>
    <h1>Create Course</h1>
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">


        <div class="form-group">
            <label for="exampleFormControlInput1">Add Course Image</label>a
            <input class="form-control" asp-for="Photos"></input>
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>

        
        <div class="form-group">
            <label for="exampleFormControlInput1">Add Course Name</label>
            <textarea class="form-control" type="text" id="Course-Name" asp-for="Name"></textarea>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>


        <div class="form-group">
            <label for="exampleFormControlInput1">Add Course Description</label>
            <textarea class="form-control" type="text" id="Product-Name" asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


        <div class="form-group">
            <label for="exampleFormControlInput1">Add Course Price</label>
            <input class="form-control" type="text" id="Product-Name" asp-for="Price"></input>
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>


        <div class="form-group">
            <label class="mt-3">Choose Course's Authors</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>
        </div>

   
   
        <div class="my-3">
            <button type="submit" class="btn btn-success">Submit</button>
            <a type="button" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>
