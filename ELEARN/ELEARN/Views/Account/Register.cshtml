 @using ELEARN.ViewModels.Account;
 @model RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
   
    @{
        ViewData["Title"] = "Register";
    }

    <style>

        
body {
    background: url("https://images.unsplash.com/photo-1485802007047-7774de7208e5?dpr=1&auto=compress,format&fit=crop&w=1800&h") no-repeat center center fixed;
    background-size: cover;
    font-family: 'Droid Serif', serif;
}

#container {
    background: rgba(3, 3, 55, 0.5);
    width: 25.75rem;
    height: 32rem;
    margin: auto;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

header {
    text-align: center;
    vertical-align: middle;
    line-height: 3rem;
    height: 3rem;
    background: rgba(3, 3, 55, 0.7);
    font-size: 1.4rem;
    color: #d3d3d3;
}

fieldset {
    border: 0;
    text-align: center;
}

input[type="submit"] {
    background: rgba(235, 30, 54, 1);
    border: 0;
    display: block;
    width: 70%;
    margin: 0 auto;
    color: white;
    padding: 0.8rem;
    cursor: pointer;
}

input {
    background: transparent;
    border: 0;
    border-left: 4px solid;
    border-color: #FF0000;
    padding: 10px;
    color: white;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus {
    outline: 0;
    background: rgba(235, 30, 54, 0.3);
    border-radius: 1.2rem;
    border-color: transparent;
}

::placeholder {
    color: #d3d3d3;
}

    </style>



    <section>

        <div id="container">
           
            <header>Register</header>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-action="Register" method="post">
                <fieldset>
                    <br />
                    <input asp-for="FullName" autocomplete="off" placeholder="FullName">
                    <br />
                    <br />
                    <input asp-for="Username" autocomplete="off" placeholder="Username" autofocus>
                    <br />
                    <br />
                    <input asp-for="Email" autocomplete="off" placeholder="E-mail">
                    <br />
                    <br />
                    <input asp-for="Password" autocomplete="off" placeholder="Password">
                    <br />
                    <br />
                    <input asp-for="ConfirmPassword"  autocomplete="off" placeholder="Confirm Password" />
                    <br />
                    <br />
                    <br />
                    <label for="submit"></label>
                    <input type="submit" name="submit" id="submit" value="REGISTER">
                    <br />
                    <label>RememberMe</label>
                    <input type="checkbox" asp-for="RememberMe" />
                    <br />
                </fieldset>
            </form>
        </div>
    </section>
</body>
</html>
